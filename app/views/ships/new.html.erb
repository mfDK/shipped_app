<div class="container">
	<h1>Ships#new</h1>
	<p>Find me in app/views/ships/new.html.erb</p>

	<%= form_for @ship , :url => ships_path , :html => { :multipart => true , :class => "form-horizontal center"} do |f| %>
		<fieldset class="form-group">
			<%= f.label :ship_name %>
			<%= f.text_field :ship_name %>
		</fieldset>
		<fieldset class="form-group">
			<%= f.label :container_qty %>
			<%= f.text_field :container_qty %>
		</fieldset>
		<fieldset class="form-group">
			<%= f.select :current_location , [['Beirut','beirut'],['Naples','naples'],['Singapore','singapore']] %>
		</fieldset>
		<fieldset class="form-group">
			<%= f.label :avatar , "Upload Ship Picture" %>
			<%= f.file_field :avatar , class: "upload" %>
		</fieldset>
		<%= f.submit "Create Ship" , class: "btn btn-primary" %>
	<% end %>

	<% if @ship.errors.any? %>
		<% @ship.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
		<% end %>
	<% end %>
</div>