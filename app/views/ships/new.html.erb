<h1>Ships#new</h1>
<p>Find me in app/views/ships/new.html.erb</p>

<%= form_for @ship , :url => ships_path , :html => { :multipart => true } do |f| %>
	<%= f.label :ship_name %>
	<%= f.text_field :ship_name %>
	<%= f.label :container_qty %>
	<%= f.text_field :container_qty %>
	<%= f.select :current_location , [['Beirut','beirut'],['Naples','naples'],['Singapore','singapore']]%>
	<%= f.label :avatar , "Upload Ship Picture" %>
	<%= f.file_field :avatar  %>
	<%= f.submit "Create Ship" %>
<% end %>

<% if @ship.errors.any? %>
	<% @ship.errors.full_messages.each do |msg| %>
	<li><%= msg %></li>
	<% end %>
<% end %>