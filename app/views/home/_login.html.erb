<%= form_tag login_path do %>
	<h3><%= label_tag :email %></h3>
	<%= text_field_tag :email %>
	<h3><%= label_tag :password %></h3>
	<%= password_field_tag :password %> <br>
	<%= submit_tag "Login" , :class => 'btn btn-primary' %>
<% end %>

<% if flash[:alert] %>
	<div id="invalid"><%= flash[:alert] %></div>
<% end %>